{
  "manifest_version": 2,

  "name": "vk music player",
  "description": "This extension allows to listen music from vk.com",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
		"*://vk.com/*"
	],
      "css": ["onpage-styles.css"],
      "js": ["js/jquery-1.11.0.min.js", 
	  "js/jquery-migrate-1.2.1.min.js", 
	  "js/mutate/mutate.events.js",
	  "js/mutate/mutate.min.js",
	  "js/vk-music-onpage-kp.js"]
	}
  ],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "index.html"
  },
  
  "web_accessible_resources": [
    "images/*.*",
    "js/jquery-1.11.0.min.js", 
	"js/jquery-migrate-1.2.1.min.js",
	"js/vk-music-onpage-kp.js",
	"onpage-styles.css"
  ],

   "background": {
    "scripts": ["js/vk-background-worker.js"]
  },

  "permissions": [
    "*://vk.com/*",
	"*://vk.me/*",
	"*://*.vk.com/*",
	"*://*.vk.me/*",
	"downloads",
	//"background",
	"webRequest",
	"tabs"
  ]
}